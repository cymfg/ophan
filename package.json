{
  "name": "ophan",
  "version": "0.3.0",
  "description": "A self-improving AI development agent based on the Two-Loop Paradigm",
  "type": "module",
  "main": "dist/cli/index.js",
  "bin": {
    "ophan": "dist/cli/index.js"
  },
  "files": [
    "dist",
    "docs/ophan_logo.png",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cymfg/ophan.git"
  },
  "bugs": {
    "url": "https://github.com/cymfg/ophan/issues"
  },
  "homepage": "https://github.com/cymfg/ophan#readme",
  "scripts": {
    "build": "esbuild src/cli/index.ts --bundle --platform=node --target=node18 --outfile=dist/cli/index.js --format=esm --external:@anthropic-ai/sdk --external:simple-git --external:yaml --external:zod --external:commander --external:inquirer --external:chalk --external:ora --external:glob --external:express --external:ws --external:open && cp -r src/ui/public dist/ui/",
    "dev": "tsx src/cli/index.ts",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "ai",
    "agent",
    "claude",
    "development",
    "automation",
    "self-improving",
    "two-loop"
  ],
  "author": "Matthew Yeager",
  "contributors": [
    "Donald Thompson (Two-Loop Paradigm)"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.15",
    "@anthropic-ai/sdk": "^0.32.1",
    "@types/express": "^5.0.6",
    "@types/ws": "^8.18.1",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "express": "^5.2.1",
    "glob": "^13.0.0",
    "inquirer": "^12.3.0",
    "open": "^11.0.0",
    "ora": "^8.1.1",
    "simple-git": "^3.27.0",
    "ws": "^8.19.0",
    "yaml": "^2.6.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/node": "^22.10.5",
    "esbuild": "^0.24.2",
    "eslint": "^9.17.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
